// challenge 1
#include <stdio.h>
int main() {
    int tab[]={};
    int n,i;
    printf("entres lindice de ce tab :");
    scanf("%d",&n);
    for (i=0;i<n;i++){
        printf (" entres les elment de tab : ");
        scanf("%d",&tab);
    }
    printf (" fin de programme");
return 0;
}

// challenge 3
#include <stdio.h>

int main() {
    int tab[]={};
    int n,i;
    int s=0;
    printf("entres le nombre des element  :");
    scanf("%d",&n);
    for (i=0;i<n;i++){
        printf (" entres les elment de tab : ");
        scanf("%d",&tab[i]);
        s=s+tab[i];
    }
    printf("la somme est %d :",s);

    printf (" fin de programme");
    return 0;
}

